<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_color"
    tools:context=".settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:clickable="true"
            android:id="@+id/back_button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/black"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Aide"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_traceur_explication"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Explication du traceur"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_assistance"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Centre d'assistance"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Paramètres"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_notif"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_unit"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Unité de mesure"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_darkmode"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Mode sombre"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Plus"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_social_media"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Réseaux sociaux"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_credits"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Crédits"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/btn_more_info"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="En savoir plus"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="10dp"/>
    </LinearLayout>


</LinearLayout>